{
  "name": "codegen",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Code generation tool for widget and types packages",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "generate": "npm run build && node dist/index.js",
    "generate:valibot": "tsx src/valibot.ts -- --input ./input.json --output ./packages/widget-valibot/src/index.ts",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "change-case": "^5.2.0",
    "minimist": "^1.2.8",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.1.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
